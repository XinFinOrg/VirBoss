<% include layouts/adminSidebar %>
    <div class="content-wrapper">
        <div class="content container">
            <!--START PAGE HEADER -->
            <header class="page-header">
                <div class="d-flex align-items-center">
                    <div class="mr-auto">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </header>
            <!--END PAGE HEADER -->

            <!--START PAGE CONTENT -->
            <section class="page-content">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="row m-0 col-border-xl">
                                <div class="col-md-6 col-lg-6 col-xl-3">
                                    <div class="card-body">
                                        <div class="icon-rounded icon-rounded-primary float-left m-r-20">
                                            <i class="la la-btc"></i>
                                        </div>
                                        <h5 class="card-title m-b-5 counter" id="Bitcoin_balance" data-count="5627">
                                            <%- btcBalance %>
                                        </h5>
                                        <h6 class="text-muted m-t-10">Admin BTC Balance</h6>
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-6 col-xl-3">
                                    <div class="card-body">
                                        <div class="icon-rounded icon-rounded-info float-left m-r-20">
                                            <i class="cf cf-eth"></i>
                                        </div>
                                        <h5 class="card-title m-b-5 counter" id="Ethereum_balance" data-count="67">
                                            <%- ethBalance %>
                                        </h5>
                                        <h6 class="text-muted m-t-10">Admin ETH Balance</h6>
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-6 col-xl-3">
                                    <div class="card-body">
                                        <div class="icon-rounded icon-rounded-accent float-left m-r-20">
                                            <i class="icon dripicons-user-group"></i>
                                        </div>
                                        <h5 class="card-title m-b-5 counter" data-count="337">
                                            <%- userCount %>
                                        </h5>
                                        <h6 class="text-muted m-t-10">Registered Users</h6>
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-6 col-xl-3">
                                    <div class="card-body">
                                        <div class="icon-rounded icon-rounded-success float-left m-r-20">
                                            <i class="la la-bank"></i>
                                        </div>
                                        <h5 class="card-title m-b-5 counter" data-count="250">
                                            <%- verifiedUserCount %>
                                        </h5>
                                        <h6 class="text-muted m-t-10">Verified Users</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">Smart Contract Interaction
                            </div>
                            <div class="card-body">
                                <div class="row m-0 col-border-xl">
                                    <div class="col-md-6 col-lg-6 col-xl-3">
                                        <div class="card-body">
                                            <div class="icon-rounded icon-rounded-primary float-left m-r-20">
                                                <i class="la la-btc"></i>
                                            </div>
                                            <h5 class="card-title m-b-5 counter" id="Bitcoin_balance" data-count="5627">
                                                <%- tokenBalance %>
                                            </h5>
                                            <h6 class="text-muted m-t-10">Token Balance</h6>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-lg-6 col-xl-3">
                                        <div class="card-body">
                                            <div class="icon-rounded icon-rounded-primary float-left m-r-20">
                                                <i class="la la-btc"></i>
                                            </div>
                                            <h5 class="card-title m-b-5 counter" id="Bitcoin_balance" data-count="5627">
                                                <%- crowdsaleBalance %>
                                            </h5>
                                            <h6 class="text-muted m-t-10">Crowdsale Balance</h6>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-lg-6 col-xl-6">
                                        <div class="card-body">
                                            <form action="/icoDashboard/transaction/project/<%=projectName %>/tokenTrasfer" method="post" class="form-horizontal" enctype="multipart/form-data">
                                                <div class="form-row">
                                                    <div class="form-group col-md-8">
                                                        <input type="text" class="form-control" id="tokenAddress" name="tokenAddress" placeholder="Enter Address of the Crowdsale or Investor">

                                                    </div>
                                                    <div class="form-group col-md-4">
                                                        <input type="text" class="form-control" id="tokenAmount" name="tokenAmount" placeholder="Enter token amount to trasfer to Crowdsale or Investor">
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        <button type="submit" class="btn btn-primary btn-rounded">Transfer
                                                            tokens
                                                        </button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">Latest ICO Trades
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="bs4-table" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>USER ID</th>
                                        <th>PAYMENT METHOD</th>
                                        <th>TOKEN AMOUNT</th>
                                        <th>ADDRESS</th>
                                        <th>TRANSACTION HASH</th>
                                        <th>TRANSFER STATUS</th>
                                        <th>CREATED AT</th>
                                        <th>UPDATED AT</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (var i = 0; i < transactionLog.length; i++) { %>
                                        <tr>
                                            <td class="break">
                                                <%= transactionLog[i].uniqueId %>
                                            </td>
                                            <td>
                                                <%=  transactionLog[i].paymentMethod %>
                                            </td>
                                            <td>
                                                <%=  transactionLog[i].tokenAmount %>
                                            </td>
                                            <td class="break">
                                                <%= transactionLog[i].address %>
                                            </td>
                                            <td class="break">
                                                <%=  transactionLog[i].transaction_hash %>
                                            </td>
                                            <td>
                                                <%= transactionLog[i].tokenTransferStatus %>
                                            </td>
                                            <td class="break">
                                                <%=  transactionLog[i].createdAt.toDateString() %>
                                            </td>
                                            <td class="break">
                                                <%=  transactionLog[i].updatedAt.toDateString() %>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
        </div>
    </div>
    </section>
    <!--END PAGE CONTENT -->
    </div>


    </div>
    <!-- END CONTENT WRAPPER -->
    </div>
    <!-- END APP WRAPPER -->


    <!-- FOOTER -->
    <footer class="footer text-center">Copyright © 2019 Gravitas International. All rights reserved.</footer>
    <!-- END FOOTER -->
    </body>

    </html>