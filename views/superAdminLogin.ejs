    <!-- This page plugin js -->

    <script>
        $("#recoverformSend").hide();
        $('[data-toggle="tooltip"]').tooltip();
        $(".preloader").fadeOut();
        // ==============================================================
        // Login and Recover Password
        // ==============================================================
        $('#to-recover').on("click", function () {
            $("#loginform").slideUp();
            $("#recoverform").fadeIn();
        });
        $('#to-recoveremailsent').on("click", function () {
            console.log( $('#emailid').val())
            $("#recoverform").slideUp();
            $("#recoverformSend").show();
            $.get("/forgotPassword?email=" + $('#emailid').val())
        });
