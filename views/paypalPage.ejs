  <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.17.0/dist/jquery.validate.js"></script>
  <script>
    jQuery.validator.addMethod("isTwoDecimal", function (value, element) {
      return this.optional(element) || /^\d{0,4}(\.\d{0,2})?$/i.test(value);
    }, "You must include two decimal places");
    jQuery.validator.addMethod("isAddress", function (value, element) {
      return this.optional(element) || /^0x[a-fA-F0-9]{40}$/g.test(value);
    }, "You must include two decimal places");

    $(function () {
      $("form[name='paypalForm']").validate({
        rules: {
          address: {
            required: true,
            isAddress: true
          },
          amount: {
            required: true,
            min: 100
          },
          price: {
            required: true,
            isTwoDecimal: true
          }
        },
        messages: {
          address: "Please enter valid ethereum address",
          amount: "Amount must be greater then 100 $ ",
        },
        submitHandler: function (form) {
          form.submit();
        }
      });
    });
  </script>
  <script>
    var myInput2 = document.getElementById("amount_id");
    myInput2.onkeyup = function () {
      var priceNow = document.getElementById("priceNow");
      let amt = priceNow.value * myInput2.value
